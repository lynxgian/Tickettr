{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./dist/*"],
    }
  },

  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}